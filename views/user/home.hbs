        align-items: center;
        padding: 0 ;
        margin: 0;
    }


    .card{
        margin: 1rem 1rem;
        background: -webkit-linear-gradient(to right, #06ff33, #37ff1d);
        background: linear-gradient(to right, #18ff08, #0cff04);
        height: 26rem;
        width: 30%;
        border-radius: 2rem;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column  ;
        box-shadow: rgba(0, 0, 0, 0.19) 0px 10px 20px, rgba(0, 0, 0, 0.23) 0px 6px 6px;
        transition: all 500ms;

    }
    span{
        font-size: 3rem;
        color: white;
        font-family: "Poppins", sans-serif;
        font-weight: 800;
        text-decoration: underline;
    }

    .text{
        margin-top: 0.7rem ;
        text-align: center;
        width: 80%;
        color: white;
        font-family: "Poppins", sans-serif;
    }
    button{
        width: 8rem;
        height: 3rem;
        margin-top: 2rem;
        background-color: white;
        border-radius: 2rem;
        border:none;
        color:rgb(51, 51, 51);
        box-shadow: rgba(50, 50, 93, 0.25) 0px 13px 27px -5px, rgba(0, 0, 0, 0.3) 0px 8px 16px -8px;        
    }
    button:hover{
        animation: zoom 1s ease-out 2ms 500ms normal forwards;

    }
    @keyframes zoom{
        0%{
            transform: scale(1);
        }50%{
            filter:blur(8px);
        }100%{
            transform: scale(1.05);
            filter:blur(0px);
        }
  
    }

    .card:hover{
        background: -webkit-linear-gradient(to right, #06ff33, #37ff1d);
        background: linear-gradient(to right, #18ff08, #0cff04);
        transform: scale(1.03);
    }

